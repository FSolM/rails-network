<div class="container container-feed">
  <div class="row">
    <div class="col-md-4 feed-user-cont">
      <%= render "layouts/user_sidebar" %>
    </div>
    <div class="col-md-8 feed-posts-cont">
      <div class="edit-post">
        <%= form_for(@post, url: post_path) do |f| %>
          <div class="field">
            <%= f.text_field :content, class: "edit-post-field"%>
          </div>
          <div class="actions">
            <%= f.submit "Edit post", class: "btn edit-post-submit" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>