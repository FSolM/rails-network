<div class="container container-session-new">
  <div class="row">
    <div class="col-md-6">
      <%= render "layouts/recent_posts" %>
    </div>
    <div class="col-md-6">
      <h4>Log In to Start Publishing your Posts!</h4>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email' %>
        </div>
        <div class="field">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field checkbox">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <div class="actions">
          <%= f.submit "Log in", class: "btn" %>
        </div>
      <% end %>
      <div class="col-12 registration-omniauth">
        <%= link_to "Log In with Facebook", user_facebook_omniauth_authorize_path %>
      </div>
    </div>
  </div>
</div>
