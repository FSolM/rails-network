<div class="container container-comment-new">
  <%= form_for(:comment, url: comments_path )  do |f| %>
    <div class="row">
      <div class="col-6">
        <div class="field">
          <%= f.text_field :content %>
        </div>
      </div>
      <div class="col-2">
        <div class="actions">
          <%= f.submit "Post", class: "btn new-comment-submit" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
