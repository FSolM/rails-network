<h2>Friend requests</h2>
<% if @friend_requests.empty? %>
  <h4>You don't have friend requests :c</h4>
<% else %>
  <div class="friend-requests-container">
    <% @friend_requests.each do |user| %>
      <div class="friend-request">
        <!--- Add user image -->
        <h1><%= link_to "#{user.name}", user_path(user) %></h1>
        <%= link_to "Accept friend", accept_friend_request_url(user_id: user.id) %>
        <%= link_to "Decline friend", decline_friend_request_url(user_id: user.id) %>
      </div>
    <% end %>
  </div>
<% end %>