<div class="recent-posts">
  <% if @recent_posts.empty? %>
    <h4>Wow, such empty, wanna be first?</h4>
  <% else %>
    <h4>What are people talking about?<h4>
    <hr>
    <% @recent_posts.each do |post| %>
      <div class="post">
        <div class="post-container">
          <div class="user-info">
            <div class="user-img-mock"></div>
            <%= link_to "#{post.author.name}"  %>
          </div>
          <div class="post-content">
            <h5><%= post.content %><h5>
          </div>
        </div>
        <div class="post-info">
          <h5>Created at: <%= post.created_at.strftime("%d/%m/%Y") %></h5>
        </div>
      </div>
    <% end %>
  <% end %>
</div>